<%- layout('/layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Venues</h1>
<a href="venues/new">Add New Venue</a>

<% for (let v of venues) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (v.images[0]) {%>
      <img src="<%=v.images[0].url%>" class="img-fluid" alt="" />
      <% }%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=v.name %></h5>
        <p class="card-text"><%=v.description %></p>
        <p class="card-text">
          <small class="text-muted"><%=v.location %></small>
        </p>
        <a href="/venues/<%=v.id%>" class="btn btn-primary"><%=v.name%></a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const venues = {features: <%- JSON.stringify(venues)%>}
</script>

<script src="/js/clusterMap.js"></script>
