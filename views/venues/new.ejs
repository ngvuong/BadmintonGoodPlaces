<%- layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Venue</h1>
  <div class="col-6 offset-3">
    <form
      action="/venues"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="venue[name]"
          id="name"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="venue[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>

      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="venue[image]"
          id="image"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div> -->

      <div class="row">
        <div class="mb-3 col-6">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              id="price"
              class="form-control"
              name="venue[price]"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              required
            />
          </div>
          <div class="valid-feedback">Ok!</div>
        </div>

        <div class="mb-3 col-6">
          <label class="form-label" for="rental">Rental</label>

          <select
            class="form-control"
            aria-label="rental"
            aria-describedby="rental"
            name="venue[rental]"
            id="rental"
          >
            <option value=""></option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>

        <textarea
          class="form-control"
          type="text"
          name="venue[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Ok!</div>
      </div>

      <label for="images" class="mb-2">Images</label>
      <div class="input-group mb-3">
        <input
          type="file"
          class="form-control"
          id="images"
          name="image"
          multiple
        />
        <label class="input-group-text" for="images">Upload</label>
      </div>

      <button class="btn btn-primary my-3">Add Venue</button>
    </form>

    <button class="btn btn-outline-light">
      <a href="/venues">Home</a>
    </button>
  </div>
</div>
