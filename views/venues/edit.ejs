<%- layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit <%=venue.name %></h1>
  <div class="col-6 offset-3">
    <form action="/venues/<%=venue.id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="venue[name]"
          id="name"
          value="<%= venue.name %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="venue[location]"
          id="location"
          value="<%= venue.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="venue[image]"
          id="image"
          value="<%= venue.image %>"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            name="venue[price]"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            value="<%= venue.price %>"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>

        <textarea
          class="form-control"
          type="text"
          name="venue[description]"
          id="description"
        >
          <%= venue.description %>
        </textarea>
      </div>
      <button class="btn btn-primary my-3">Save Changes</button>
    </form>

    <button class="btn btn-info">
      <a href="/venues">Back</a>
    </button>
  </div>
</div>
