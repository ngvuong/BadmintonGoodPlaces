<%- layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit <%=venue.name %></h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/venues/<%=venue.id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="venue[name]"
          id="name"
          value="<%= venue.name %>"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="venue[location]"
          id="location"
          value="<%= venue.location %>"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-6">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              id="price"
              class="form-control"
              name="venue[price]"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              value="<%= venue.price %>"
              required
            />
            <div class="valid-feedback">Ok!</div>
          </div>
        </div>

        <div class="mb-3 col-6">
          <label class="form-label" for="rental">Rental</label>
          <select
            class="form-control"
            aria-label="rental"
            aria-describedby="rental"
            name="venue[rental]"
            id="rental"
          >
            <option value=""></option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>

        <textarea
          class="form-control"
          type="text"
          name="venue[description]"
          id="description"
          required
        >
          <%= venue.description %>
          
        </textarea>
        <div class="valid-feedback">Ok!</div>
      </div>

      <label for="images" class="mb-2">Add more images</label>
      <div class="input-group mb-3">
        <input
          type="file"
          class="form-control"
          id="images"
          name="image"
          multiple
        />
        <label class="input-group-text" for="images">Upload</label>
      </div>
      <div class="mb-3">
        <% venue.images.forEach((img,i) => { %>
        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            id="image-<%=i %>"
            value="<%= img.filename %>"
          />
        </div>
        <label for="image-<%=i %>">Delete</label>
        <% }) %>
      </div>
      <button class="btn btn-primary my-3">Save Changes</button>
    </form>

    <a href="/venues/<%=venue.id %> ">Back</a>
  </div>
</div>
