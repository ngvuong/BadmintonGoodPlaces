<%- layout('/layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%=venue.image %> " class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%=venue.name %></h5>
        <p class="card-text"><%= venue.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= venue.location %></li>
        <li class="list-group-item">$<%= venue.price %></li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-warning"
          href="/venues/<%= venue.id %>/edit "
        >
          Edit Venue
        </a>
        <form
          class="d-inline"
          action="/venues/<%= venue.id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">DELETE</button>
        </form>
      </div>
    </div>
    <h2>Leave a Review</h2>
    <form
      action="/venues/<%= venue.id %>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
          value="1"
        />
      </div>

      <div class="mb-3">
        <label for="body" class="form-label">Review</label>
        <textarea
          class="form-control"
          id="body"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
